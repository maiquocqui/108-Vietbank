									td -
									td -
								tr
									td 2 tuần
									td 0.30 %
									td -
									td -
									td -
								tr
									td 3 tuần
									td 0.60 %
									td -
									td -
									td -
								tr
									td 1 tháng
									td 5.00 %
									td -
									td 5.00 %
									td 5.00 %
								tr
									td 2 tháng (*)
									td 5.20 %
									td -
									td 5.20 %
									td 5.20 %
								tr
									td 3 tháng (*)
									td 7.00 %
									td 6.00 %
									td 6.00 %
									td 6.00 %
								tr
									td 4 tháng
									td 7.30 %
									td 7.30 %
									td 7.30 %
									td 7.30 %
			.row.flex.flex-wrap
				.col-xs-12.col-md-5
					.form-group
						label Số tiền gửi:
						.group
							input(type="text" value="100,000,000").form-control
							span.unit VND
					.form-group
						label Kỳ hạn gửi:
						.group
							select.form-control
								option(value="3") 3 tháng
								option(value="6") 6 tháng
								option(value="12") 12 tháng
					.form-group
						label Lãi suất:
						.group
							input(type="text" value="6").form-control
							span.unit %
					.form-group
						label Kỳ lãnh lãi:
						.group
							select.form-control
								option(value="1") Hàng tuần
								option(value="2") Hàng tháng
								option(value="3") Hàng năm
					.form-group
						input(type="submit" value="Ước tính")
				.col-xs-12.col-md-7
					.result
						h3 Kết Quả
						.item-result
							strong Tiền lãi định kỳ: 
							span 20,000,000 VND
						.item-result
							strong Tổng tiền lãi: 
							span 20,000,000 VND
						.item-result
							strong Tổng số tiền nhận: 
							span 200,000,000 VND